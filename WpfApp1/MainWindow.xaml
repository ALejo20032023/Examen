<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alumno" Height="431" Width="865">
    <Grid>
        <StackPanel Margin="20,20,10,10" Height="NaN" Width="NaN">
            <TextBlock Text="Carné" FontSize="20"/>
            <TextBox x:Name="txtCarnet" FontSize="20" Margin="0 5"/>

            <TextBlock Text="Nombre" FontSize="20"/>
            <TextBox x:Name="txtNombre" FontSize="20" Margin="0 5"/>

            <TextBlock Text="Teléfono" FontSize="20"/>
            <TextBox x:Name="txtTelefono" FontSize="20" Margin="0 5"/>

            <TextBlock Text="Grado" FontSize="20"/>
            <TextBox x:Name="txtGrado" FontSize="20" Margin="0 5"/>

            <Button Content="Guardar" FontSize="14" Margin="0 20" Click="Guardar_Click" Height="39" Width="243"/>
        </StackPanel>
    </Grid>
</Window>

    